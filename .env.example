# AI Model API Keys (both required)
GEMINI_API_KEY=your_api_key_here
ANTHROPIC_API_KEY=your_api_key_here

# PostgreSQL Configuration (Read-only access)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SSL_MODE=disable  # Set to 'require' in production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
LOG_FILE_PATH=logs/sierra.log

# AgentTrace Configuration
AGENTTRACE_DB_PATH=traces.db
AGENTTRACE_PROJECT_ID=sierra
AGENTTRACE_ENV=development

# Web Dashboard Configuration
DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0  # Use localhost for development 